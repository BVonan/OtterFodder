<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="/scripts/main.js"></script>
      
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <title>Shell Stack</title>
</head>
<header><%- include('partials/loginav.ejs') %></header>
  <body id="shell">
    <div class="container">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="swiper-container">
            <% users.forEach((user, index) => { %>
            <div
              class="swiper-slide"
              data-user-id="<%= user.login_Id %>"
              <% if (index > 0) { %>style="display: none;"<% } %>
            >
                  <!-- Carasoul -->
                
             <div id="carouselExample" class="carousel slide">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="<%=user.image_1%>" class="d-block w-100" alt="pic 1">
    </div>
    <div class="carousel-item">
      <img src="<%=user.image_2%>" class="d-block w-100" alt="pic 2">
    </div>
    <div class="carousel-item">
      <img src="<%=user.image_3%>" class="d-block w-100" alt="pic 3">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
              <div class="card-body">
                <h2 class="card-title text-center"><%= user.firstName %></h2>
                <p class="card-text text-center"><%= user.bio %></p>
                <p class="card-text text-center"><%= user.zip %></p>
                <div class="embed-responsive embed-responsive-16by9">
                  <iframe
                    class="embed-responsive-item"
                    src="https://www.youtube.com/embed/<%= user.music %>"
                    allowfullscreen
                  ></iframe>
                </div>
              </div>
            </div>
            <% }); %>
            <div class="swiper-slide no-more-users" style="display: none;">
              <h2>No more users to swipe on.</h2>
            </div>
          </div>
          <input type="hidden" id="swiper-id" value="<%= login_Id %>"/>
          <div class="d-flex justify-content-between mt-3">
            <button id="swipe-left" class="btn btn-danger position-absolute top-50 start-0 translate-middle-y">Swipe Left</button>
            <button id="swipe-right" class="btn btn-success position-absolute top-50 end-0 translate-middle-y">Swipe Right</button>
          
                </div>
        </div>
      </div>
    </div>
                <script >
                    function previewProfile() {
    window.location.href = '/displayUser?login_Id=<%=login_Id%>';
}

function editProfile(event) {

    event.stopPropagation();
    window.location.href = '/editUser?login_Id= <%=login_Id%>';
}

                </script>
  </body>
</html>
